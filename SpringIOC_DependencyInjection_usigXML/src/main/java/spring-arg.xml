<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
            <bean id="mySim" class="com.jsp.Sim">
            <property name="number" value="9552006654"></property>
            <property name="service" value="JIO"></property>
            </bean>
            <bean id ="myPhone" class="com.jsp.SmartPhone">
            <constructor-arg name="sim" ref="mySim"></constructor-arg>
            </bean>

</beans>